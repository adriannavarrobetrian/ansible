<VirtualHost {{ ansible_default_ipv4.address }}:80>

        ServerName {{ item }}
        ServerAlias www.{{ item }}

        ServerAdmin webmaster@powa.com

        DocumentRoot /web/1/public_html
        DirectoryIndex index.htm index.html index.wml

        AllowEncodedSlashes On

        LogFormat "1 %h %u %l %t \"%r\" %>s %b \"%{{ "{" }}Referer{{ "}" }}i\" \"%{{ "{" }}User-Agent{{ "}" }}i\""

        <IfModule mod_rewrite.c>
                RewriteEngine On
                RewriteOptions inherit
        </IfModule>

        ErrorDocument 401 /error_pages/401.html
        ErrorDocument 403 /error_pages/403.html
        ErrorDocument 404 /error_pages/404.html
        ErrorDocument 500 /error_pages/500.html

</VirtualHost>

